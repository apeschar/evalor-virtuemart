<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
    <name>WebwinkelKeur</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>March 2014</creationDate>
    <author>Albert Peschar</author>
    <authorEmail>albert@peschar.net</authorEmail>
    <authorUrl>https://peschar.net</authorUrl>
    <copyright>(C) 2014 Albert Peschar</copyright>
    <!--  The version string is recorded in the components table -->
    <version>1.0.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>De Joomla plugin zorgt voor een eenvoudige integratie van het WebwinkelKeur binnen jouw webwinkel. Hiermee is het heel eenvoudig om de innovatieve WebwinkelKeur Sidebar in jouw Joomla website of VirtueMart webwinkel te integreren. Wanneer je VirtueMart gebruikt, kunnen er bovendien automatisch uitnodigingen naar je klanten worden gestuurd.</description>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    <!--
    <files folder="site">
        <filename>index.html</filename>
        <filename>helloworld.php</filename>
    </files>
    -->
    <media destination="com_webwinkelkeur" folder="media">
        <folder>images</folder>
    </media>
    <administration>
        <menu img="../media/com_webwinkelkeur/images/logo16.png">COM_WEBWINKELKEUR_MENU</menu>
        <files folder="admin">
            <filename>webwinkelkeur.php</filename>
            <filename>webwinkelkeur.css</filename>
            <filename>controller.php</filename>
            <folder>views</folder>
            <folder>sql</folder>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/com_webwinkelkeur.sys.ini</language>
            <language tag="nl-NL">language/com_webwinkelkeur.sys.ini</language>
        </languages>
    </administration>
</extension>
